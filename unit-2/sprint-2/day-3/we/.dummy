      }
      #banner h2{
        margin-top: 25px;
      }
      #banner h2,#banner p{
        margin-bottom: 10px;

      }
      #services{
        display: grid;
        grid-template-columns: repeat(6,1fr);
        gap: 20px;
        margin-top: 50px;
        margin-bottom: 20px;

      }
      #services img{
        width: 80%;
        display: block;
        margin: auto;
        
      }
      #services>div>div:nth-child(1){
        background-color: aquamarine;
        width: 100%;
      }
      #works>div{
        display: grid;
        grid-template-columns: repeat(4,1fr);
        gap:  10px 20px;
        margin-top: 10px;
      }
      #works img{
        width: 100%;
      }
      #works>h1{
        text-align: center;
      }
      #works>h1+p{
        text-align: center;
      }
      #works{
        width: 100%;
      }

      /* Medium Screen */
      @media only screen and (min-width: 500px) and (max-width: 768px)
       {
        #banner{
          flex-direction: column;
        }
        #banner>div>img{
          width: 100%;
          height: auto;
        }
        #services{
          grid-template-columns: repeat(3,1fr);
        }
        #works{
          grid-template-columns:repeat(2,1fr) ;
          grid-template-rows: repeat();
        }
      }
      /* Small Screen */
      @media only screen and (min-width: 320px) and (max-width: 499px) {
        #services{
          grid-template-columns: repeat(2,1fr);
        }
        #banner{
          flex-direction: column;
        }
        #banner>div>img{
          width: 100%;
          
          height: auto;
        }
        #works{
          grid-template-columns:repeat(1,1fr) ;
          grid-template-rows: repeat();
        }
      }

    </style>
